}
@article{shao-etal-2021-sequence,
    title = "Sequence-Level Training for Non-Autoregressive Neural Machine Translation",
    author = "Shao, Chenze  and
      Feng, Yang  and
      Zhang, Jinchao  and
      Meng, Fandong  and
      Zhou, Jie",
    journal = "Computational Linguistics",
    volume = "47",
